{
  "apiId": "projects",
  "name": "プロジェクト (活動実績)",
  "description": "サークルの活動実績・プロジェクトを管理するAPI",
  "type": "list",
  "fields": [
    {
      "fieldId": "title",
      "name": "プロジェクト名",
      "kind": "text",
      "required": true,
      "description": "プロジェクトのタイトル"
    },
    {
      "fieldId": "slug",
      "name": "スラッグ",
      "kind": "text",
      "required": true,
      "description": "URL用の識別子 (例: noto-volunteer-2024)"
    },
    {
      "fieldId": "status",
      "name": "ステータス",
      "kind": "select",
      "required": true,
      "selectItems": [
        {
          "value": "published",
          "label": "公開中"
        },
        {
          "value": "archived",
          "label": "アーカイブ"
        }
      ],
      "description": "プロジェクトの公開状態"
    },
    {
      "fieldId": "category",
      "name": "カテゴリ",
      "kind": "select",
      "required": false,
      "selectItems": [
        {
          "value": "business-contest",
          "label": "ビジネスコンテスト"
        },
        {
          "value": "volunteer",
          "label": "ボランティア活動"
        },
        {
          "value": "lecture",
          "label": "講演会"
        },
        {
          "value": "learning",
          "label": "学習会"
        },
        {
          "value": "other",
          "label": "その他"
        }
      ],
      "description": "プロジェクトのカテゴリ"
    },
    {
      "fieldId": "period",
      "name": "実施期間",
      "kind": "text",
      "required": true,
      "description": "実施時期 (例: 2024年6月〜8月)"
    },
    {
      "fieldId": "startDate",
      "name": "開始日",
      "kind": "date",
      "required": false,
      "description": "プロジェクト開始日 (ソート・フィルタ用)"
    },
    {
      "fieldId": "endDate",
      "name": "終了日",
      "kind": "date",
      "required": false,
      "description": "プロジェクト終了日 (ソート・フィルタ用)"
    },
    {
      "fieldId": "members",
      "name": "参加人数",
      "kind": "number",
      "required": true,
      "description": "プロジェクト参加人数"
    },
    {
      "fieldId": "heroImage",
      "name": "ヒーロー画像",
      "kind": "media",
      "required": true,
      "description": "プロジェクトのメイン画像"
    },
    {
      "fieldId": "overview",
      "name": "プロジェクト概要",
      "kind": "repeater",
      "required": true,
      "description": "目的・背景・課題設定",
      "fields": [
        {
          "fieldId": "section",
          "name": "セクション",
          "kind": "select",
          "required": true,
          "selectItems": [
            {
              "value": "purpose",
              "label": "目的"
            },
            {
              "value": "background",
              "label": "背景"
            },
            {
              "value": "challenge",
              "label": "課題設定"
            }
          ]
        },
        {
          "fieldId": "content",
          "name": "内容",
          "kind": "richEditor",
          "required": true
        }
      ]
    },
    {
      "fieldId": "process",
      "name": "活動内容・プロセス",
      "kind": "repeater",
      "required": false,
      "description": "ステップごとの活動内容",
      "fields": [
        {
          "fieldId": "order",
          "name": "順序",
          "kind": "number",
          "required": true,
          "description": "表示順序"
        },
        {
          "fieldId": "stepTitle",
          "name": "ステップタイトル",
          "kind": "text",
          "required": true,
          "description": "ステップの見出し"
        },
        {
          "fieldId": "description",
          "name": "説明",
          "kind": "richEditor",
          "required": true,
          "description": "ステップの詳細内容"
        },
        {
          "fieldId": "images",
          "name": "画像",
          "kind": "media",
          "required": false,
          "multipleSelect": true,
          "description": "ステップに関連する画像"
        },
        {
          "fieldId": "date",
          "name": "実施日",
          "kind": "text",
          "required": false,
          "description": "このステップの実施日 (任意)"
        }
      ]
    },
    {
      "fieldId": "results",
      "name": "成果",
      "kind": "repeater",
      "required": false,
      "description": "プロジェクトの成果指標",
      "fields": [
        {
          "fieldId": "label",
          "name": "成果項目名",
          "kind": "text",
          "required": true,
          "description": "成果の名称 (例: 参加者数)"
        },
        {
          "fieldId": "value",
          "name": "数値",
          "kind": "text",
          "required": true,
          "description": "成果の数値 (例: 50)"
        },
        {
          "fieldId": "unit",
          "name": "単位",
          "kind": "text",
          "required": false,
          "description": "単位 (例: 名、回、件)"
        },
        {
          "fieldId": "description",
          "name": "補足説明",
          "kind": "textArea",
          "required": false,
          "description": "成果の詳細説明"
        }
      ]
    },
    {
      "fieldId": "learnings",
      "name": "学び・気づき",
      "kind": "richEditor",
      "required": false,
      "description": "プロジェクトを通じて得られた学びや気づき"
    },
    {
      "fieldId": "projectMembers",
      "name": "メンバー紹介",
      "kind": "repeater",
      "required": false,
      "description": "プロジェクトメンバーの情報",
      "fields": [
        {
          "fieldId": "name",
          "name": "名前",
          "kind": "text",
          "required": true
        },
        {
          "fieldId": "role",
          "name": "役割",
          "kind": "text",
          "required": false,
          "description": "プロジェクト内での役割"
        },
        {
          "fieldId": "comment",
          "name": "コメント",
          "kind": "textArea",
          "required": false,
          "description": "メンバーからの一言"
        },
        {
          "fieldId": "avatar",
          "name": "アバター画像",
          "kind": "media",
          "required": false
        }
      ]
    },
    {
      "fieldId": "galleryImages",
      "name": "ギャラリー画像",
      "kind": "media",
      "required": false,
      "multipleSelect": true,
      "description": "プロジェクトに関連する追加画像"
    },
    {
      "fieldId": "relatedProjects",
      "name": "関連プロジェクト",
      "kind": "relation",
      "required": false,
      "multipleSelect": true,
      "referenceKey": "projects",
      "description": "関連する他のプロジェクト (手動設定用)"
    },
    {
      "fieldId": "tags",
      "name": "タグ",
      "kind": "text",
      "required": false,
      "multipleSelect": true,
      "description": "検索・分類用のタグ (複数選択可能)"
    },
    {
      "fieldId": "seoTitle",
      "name": "SEOタイトル",
      "kind": "text",
      "required": false,
      "description": "メタタイトル (未入力時はプロジェクト名を使用)"
    },
    {
      "fieldId": "seoDescription",
      "name": "SEO説明文",
      "kind": "textArea",
      "required": false,
      "description": "メタディスクリプション"
    },
    {
      "fieldId": "ogImage",
      "name": "OGP画像",
      "kind": "media",
      "required": false,
      "description": "SNSシェア用の画像 (未入力時はヒーロー画像を使用)"
    }
  ]
}
